{% extends "layout.html.twig" %}

{% block page_title %}
    Accueil
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="home-page">
<section class='wrap-header'>
    
    <div class="image">
         <img alt="image" src="{{ data.header.image }}" />
    </div>
    <h1>{{ data.header.title }}</h1>       
    
    <div class='button-join'>
        {% for button in data.header.buttons %}
            {% include 'components/_button-ui.html.twig' with {data : button} %}
        {% endfor %}
     </div> 
</section>

{% include 'components/_events.html.twig' with {title : data.event.title, events : events} %}

<section class='wrap-type-member'>
    <div class='containt'>
        <p>{{ data.member.description }}</p>
        <h3>{{ data.member.title }}</h3>
        <div class='button-container'>
            {% for button in data.member.buttons %}
                {% include 'components/_button-ui.html.twig' with {data : button} %}
            {% endfor %}
        </div>   
    </div>
</section>

<section class='wrap-portrait'>
    <h2>{{data.portrait.title}}</h2>
    <div class='citation'>
        <p class='desc'>{{data.portrait.citation.text}}</p>
        <p class='auther'>{{data.portrait.citation.author ~ ' - quartier ' ~ data.portrait.citation.district}}</p>
    </div>
    <div class="portrait-social">
        {% include 'components/_social-block.html.twig' with {type : data.portrait.person.type, data : data.portrait.person.data, class : 'gray'} %}
    </div>
    <div class='portrait-button'>
        {% for button in data.portrait.buttons %}
            {% include 'components/_button-ui.html.twig' with {data : button} %}
        {% endfor %}
    </div>
</section>

<section class="section-infos">
     {% include 'components/_infos.html.twig' with {data : data.infos} %}
</section>

<section class="section-astuces">
    <h2>{{data.astuces.title}}</h2>

    {% for astuce in data.astuces.astuce %}
            {% include 'components/_astuce.html.twig' with {data : astuce} %}
    {% endfor %}

    {% for button in data.astuces.buttons %}
            {% include 'components/_button-ui.html.twig' with {data : button} %}
    {% endfor %}
</section>
</div>
{% endblock %}
