{% extends "layout.html.twig" %}

{% block page_title %}
    Accueil
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="user-page">
<section class="header-page">
     {% include 'components/_header-user.html.twig' with {data : data.header, user : user} %}
</section>
<section class="wrap-content">
    <h2>{{ data.nextEvents.title }}</h2>
    
    <div id="next-events">
        {% for event in data.nextEvents.events %}
            {% include 'components/_user_events.html.twig' with {data : event} %}
        {% endfor %}
    </div>
    {% for button in data.buttons %}
        {% include 'components/_button-ui.html.twig' with {data : button} %}
    {% endfor %}  

    <h2>{{ data.previousEvents.title }}</h2>
    <div id="previous-events">
        {% for event in data.previousEvents.events %}
            {% include 'components/_user_events.html.twig' with {data : event} %}
        {% endfor %}
    </div>
</div>

</div>

{% endblock %}